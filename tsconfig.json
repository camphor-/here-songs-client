{
  "compilerOptions": {
    "baseUrl": ".",
    "experimentalDecorators": true,
    "types": ["@types/node", "@nuxt/vue-app", "@nuxtjs/axios", "vue-router"],
    "paths": { "@/*": ["./*"], "~/*": ["./*"] },
    "target": "es5",
    "strict": true,
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules"]
}
